  						dropdownMenu.classList.add('hidden')
  			}
  }
  function toggleProfileDropdown(e) { dropdownMenu.classList.toggle('hidden') }

  function closeCategoryDropdown(e) {
  			if (e.target !== userAvatar && e.path[1] !== dropdownMenu ){
